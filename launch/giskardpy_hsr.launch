<launch>

  <arg name="gui" default="false" />
  <arg name="sim" default="false" />

   <group if="$(eval arg('sim') == false)">
     <include file="$(find giskardpy)/launch/giskardpy_real_hsr.launch"/>
   </group>

  <node pkg="giskardpy" type="giskard_trees.py" name="giskard" output="screen">
    <param name="path_to_data_folder" value="$(find giskardpy)/data" />
    <remap from="/robot_description" to="/giskard/robot_description" />
    <rosparam command="load" file="$(find giskardpy)/config/hsr.yaml"/>
  </node>

  <node pkg="giskardpy" type="interactive_marker.py" name="giskard_interactive_marker" output="screen">
    <rosparam param="enable_self_collision">False</rosparam>
    <rosparam param="interactive_marker_chains">
      - [odom, hand_palm_link]
    </rosparam>
  </node>

</launch>